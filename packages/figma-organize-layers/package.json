{
  "name": "figma-organize-layers",
  "version": "1.0.0",
  "description": "A Figma plugin to organize layers on the page",
  "keywords": [
    "arrange",
    "arrange-layers",
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins",
    "layers",
    "organize",
    "organize-layers",
    "tidy",
    "tidy-layers"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figma-plugins.git",
    "directory": "packages/figma-organize-layers"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "create-figma-plugin-build",
    "fix": "concurrently --raw 'yarn run fix-css' 'yarn run fix-js'",
    "fix-css": "prettier --write 'src/**/*.scss'",
    "fix-js": "prettier-standard '{scripts,src,test}/**/*.js'",
    "lint": "concurrently --raw 'yarn run lint-css' 'yarn run lint-js'",
    "lint-css": "stylelint 'src/**/*.scss'",
    "lint-js": "standardx '{scripts,src,test}/**/*.js'",
    "watch": "create-figma-plugin-build --watch"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "*",
    "@create-figma-plugin/utilities": "*",
    "figma-sort-layers": "*",
    "preact": "^10.0.5"
  },
  "create-figma-plugin": {
    "id": "786286754606650597",
    "name": "Organize Layers",
    "menu": [
      {
        "name": "Organize Layers",
        "command": "organize-layers/command.js",
        "ui": "organize-layers/ui.js"
      },
      "-",
      {
        "name": "Reset",
        "command": "reset/command.js"
      }
    ]
  }
