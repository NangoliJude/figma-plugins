{
  "name": "figma-sort-layers",
  "version": "1.2.1",
  "description": "A Figma plugin to sort layers by name or position",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins",
    "sort",
    "sort-layers"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figma-plugins.git",
    "directory": "packages/figma-sort-layers"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "create-figma-plugin-build",
    "fix": "concurrently --raw 'yarn run fix-css' 'yarn run fix-js'",
    "fix-css": "prettier --write 'src/**/*.scss'",
    "fix-js": "prettier-standard '{scripts,src,test}/**/*.js'",
    "lint": "concurrently --raw 'yarn run lint-css' 'yarn run lint-js'",
    "lint-css": "stylelint 'src/**/*.scss'",
    "lint-js": "standardx '{scripts,src,test}/**/*.js'",
    "watch": "create-figma-plugin-build --watch"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "*",
    "natural-compare-lite": "^1.4.0"
  },
  "create-figma-plugin": {
    "id": "767379414704079825",
    "name": "Sort Layers",
    "menu": [
      {
        "name": "Sort Layers by Name",
        "command": "commands/sort-layers-by-name.js"
      },
      "-",
      {
        "name": "Sort Layers by X Position",
        "command": "commands/sort-layers-by-x-position.js"
      },
      {
        "name": "Sort Layers by Y Position",
        "command": "commands/sort-layers-by-y-position.js"
      },
      "-",
      {
        "name": "Smart Sort Layers",
        "command": "commands/smart-sort-layers.js"
      }
    ]
  }
}
