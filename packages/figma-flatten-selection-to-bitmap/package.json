{
  "name": "figma-flatten-selection-to-bitmap",
  "version": "1.0.1",
  "description": "A Figma plugin to rasterize layers at a high resolution",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figma-plugins.git",
    "directory": "packages/figma-flatten-selection-to-bitmap"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "yarn run clean && build-figma-plugin",
    "clean": "rimraf '*.log' build manifest.json",
    "fix": "standardx --fix 'src/**/*.{ts,tsx}' && prettier-standard 'src/**/*.{ts,tsx}' && prettier --write package.json tsconfig.json",
    "lint": "standardx 'src/**/*.{ts,tsx}'",
    "watch": "build-figma-plugin --watch"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "*"
  },
  "figma-plugin": {
    "id": "837846252158418235",
    "name": "Flatten Selection to Bitmap",
    "menu": [
      {
        "name": "Flatten Selection to Bitmap",
        "main": "flatten-selection-to-bitmap/main",
        "ui": "flatten-selection-to-bitmap/ui"
      },
      "-",
      {
        "name": "Settings",
        "main": "settings/main",
        "ui": "settings/ui"
      }
    ]
  },
  "standardx": {
    "ignore": [
      "src/**/*.scss.d.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
