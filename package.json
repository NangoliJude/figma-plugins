{
  "private": true,
  "scripts": {
    "build": "yarn run clean && lerna run build --ignore figma-ui",
    "clean": "rimraf '*.log' 'packages/*/build' 'packages/*/manifest.json'",
    "fix": "prettier-standard '*.js' 'packages/*/src/**/*.js'",
    "lint": "standard '*.js' 'packages/*/src/**/*.js'",
    "publish": "lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf yarn.lock node_modules 'packages/*/node_modules' && yarn install && yarn run build",
    "watch": "lerna run watch --ignore figma-ui"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@create-figma-plugin/build": "*",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "husky": "^3.0.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "prettier-standard": "^14.0.5",
    "rimraf": "^3.0.0",
    "standard": "^14.3.0",
    "style-loader": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard",
      "prettier-standard",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
