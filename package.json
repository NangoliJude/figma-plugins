{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run clean && lerna run --stream build",
    "bump-dependencies": "TS_NODE_PROJECT=tsconfig.shared.json node --loader ts-node/esm scripts/bump-dependencies.ts",
    "clean": "lerna run --parallel --stream clean && rimraf '*.log'",
    "fix": "lerna run --parallel --stream fix && eslint --fix 'scripts/**/*.ts' && prettier --loglevel error --write 'package.json' 'tsconfig.shared.json'",
    "lint": "lerna run --parallel --stream lint && eslint 'scripts/**/*.ts'",
    "postinstall": "simple-git-hooks && npm run build",
    "publish": "lerna publish from-package",
    "reset": "npm run clean && lerna clean --yes && rimraf node_modules package-lock.json && yarn install",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^2.0.1",
    "@create-figma-plugin/tsconfig": "^2.0.1",
    "@figma/plugin-typings": "^1.47.0",
    "@types/natural-compare-lite": "^1.4.0",
    "ava": "^4.3.0",
    "eslint": "^8.17.0",
    "eslint-config-yuanqing": "^0.0.6",
    "globby": "^13.1.1",
    "lerna": "^5.1.1",
    "lint-staged": "^13.0.1",
    "npm-check-updates": "^13.1.3",
    "preact": "^10.7.3",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^14.9.1",
    "stylelint-config-yuanqing": "^0.0.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "ignorePatterns": [
      "*.css.d.ts"
    ],
    "rules": {
      "react/no-unknown-property": [
        2,
        {
          "ignore": [
            "class",
            "clip-rule",
            "fill-rule"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ],
    "*.css": [
      "stylelint",
      "prettier"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run fix && npm run test"
  },
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  },
  "workspaces": [
    "packages/*"
  ]
}
