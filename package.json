{
  "private": true,
  "scripts": {
    "build": "yarn run clean && lerna run build",
    "bump": "ts-node scripts/bump-dependencies.ts",
    "clean": "lerna run --parallel clean && rimraf '*.log'",
    "fix": "lerna run --parallel fix && eslint --fix 'scripts/**/*.ts' && prettier --loglevel error --write '*.json'",
    "lint": "lerna run --parallel lint && eslint 'scripts/**/*.ts'",
    "postinstall": "yarn run build",
    "publish": "lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf node_modules yarn.lock && yarn install",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@create-figma-plugin/build": "*",
    "@figma/plugin-typings": "^1.15.0",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/tap": "^14.10.0",
    "eslint": "^7.5.0",
    "eslint-config-yuanqing": "0.0.2",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-check-updates": "^7.0.2",
    "preact": "^10.4.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.1.2",
    "tap": "^14.10.8",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "typescript-plugin-css-modules": "^2.4.0"
  },
  "eslintConfig": {
    "extends": "yuanqing",
    "ignorePatterns": [
      "*.scss.d.ts"
    ],
    "rules": {
      "react/prop-types": [
        "off"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint"
    ],
    "*.scss": [
      "stylelint",
      "prettier"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
