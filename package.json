{
  "private": true,
  "scripts": {
    "build": "yarn run clean && lerna run build",
    "bump-dependencies": "ts-node scripts/bump-dependencies.ts",
    "clean": "lerna run --parallel clean && rimraf '*.log'",
    "fix": "lerna run --parallel fix && eslint --fix 'scripts/**/*.ts' && prettier --loglevel error --write 'package.json' 'tsconfig.shared.json'",
    "lint": "lerna run --parallel lint && eslint 'scripts/**/*.ts'",
    "postinstall": "simple-git-hooks && yarn run build",
    "publish": "lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf node_modules yarn.lock && yarn install",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@create-figma-plugin/build": "latest",
    "@create-figma-plugin/tsconfig": "latest",
    "@figma/plugin-typings": "^1.19.3",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/tap": "^14.10.3",
    "eslint": "^7.23.0",
    "eslint-config-yuanqing": "^0.0.4",
    "globby": "^11.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-check-updates": "^11.3.0",
    "preact": "^10.5.13",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.2.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "tap": "^14.11.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "yuanqing",
    "ignorePatterns": [
      "*.scss.d.ts"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": [
        "off"
      ],
      "react/prop-types": [
        "off"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ],
    "*.scss": [
      "stylelint",
      "prettier"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "simple-git-hooks": {
    "pre-commit": "yarn run lint-staged"
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
